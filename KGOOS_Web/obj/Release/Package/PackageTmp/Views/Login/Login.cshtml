@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(function () {
        build_active("li_2");
    });

    function submitLogin() {
        var name = $('#name').val();
        var password = $('#password').val();
        $.post('../Login/inputLogin', { name: name, password: password }, function (data) {
            if (data.code == 0) {
                layui.use('layer', function () {
                    var layer = layui.layer;
                    layer.msg('登录成功！', {
                        icon: 1,
                        time: 1000
                    });
                });
                window.location = '../ConTran/MySelf'
            }
            else {
                layui.use('layer', function () {
                    var layer = layui.layer;
                    layer.msg(data.msg, {
                        icon: 2,
                        time: 3000
                    });
                });
            }

        });
    }
</script>



    <!-- container -->
    <div class="container">
        <div class="row" style="margin-top:15%;">
            <!-- Article content -->
            <div class="col-sm-2">
                <h1></h1>
            </div>
            <section class="col-sm-8 maincontent" style="text-align:center; background-color:white;">
                <form class="form-horizontal" id="CommonForm" method="post" action="#">
                    <div class="form-group form-group-lg">
                        @*<label class="col-sm-8 control-label"><h1>登入您的賬戶</h1></label>*@
                        <h1>登錄您的賬戶</h1>
                    </div>
                    <div class="form-group form-group-lg" style="margin-top:5%;">
                        <label class="col-sm-2 control-label" for="name">會員名</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="text" id="name" placeholder="請輸入會員名/郵箱/手機號">
                        </div>
                    </div>
                    <div class="form-group form-group-lg" style="margin-top:10%">
                        <label class="col-sm-2 control-label" for="password">密碼</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="password" id="password" placeholder="請輸入密碼">
                        </div>
                    </div>
                    <div class="form-group form-group-lg" style="text-align:right;width:100%">
                        <label class="col-sm-2 control-label"></label>
                        <div class="col-sm-8">
                            <a href="../Login/Register"><h5>忘記密碼</h5></a>
                        </div>
                    </div>
                    <div class="form-group form-group-lg" style="margin-top:1%;text-align:left;width:100%">
                        <label class="col-sm-2 control-label"></label>
                        <button type="button" class="btn btn-danger btn-lg" onclick="submitLogin()">登錄賬戶</button>
                        @*<input class="btn btn-danger btn-lg" type="submit" id="submit" value="登錄賬戶"
                            onclick="submitLogin">*@
                    </div>
                    <div class="form-group form-group-lg" style="text-align:right;width:100%">
                        <label class="col-sm-2 control-label"></label>
                        <div class="col-sm-8">
                            <a href="../Login/Register"><h5>立即註冊</h5></a>
                        </div>
                    </div>
                </form>

            </section>
        </div>
    </div>
    <!-- /container -->
