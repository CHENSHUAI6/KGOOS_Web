    <script>
        function submitLogin() {
            var name = $('#name').val();
            var password = $('#password').val();
            $.post('../Login/inputLogin', { name: name, password: password }, function (data) {
                if (data.code == 0)
                {
                    layui.use('layer', function () {
                        var layer = layui.layer;
                        layer.msg('登录成功！', {
                            icon: 1,
                            time: 1000
                        });
                    });
                    window.location = '../Home/Index'
                }
                else
                {
                    layui.use('layer', function () {
                        var layer = layui.layer;
                        layer.msg(data.msg, {
                            icon: 2,
                            time: 3000
                        });
                    });
                }
                
                });
        }
    </script>



